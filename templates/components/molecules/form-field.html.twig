{#
  Form Field molecule component
  
  Props:
  - label: field label
  - type: input type
  - name: input name
  - id: input id
  - placeholder: input placeholder
  - value: input value
  - required: boolean
  - error: error message
  - help: help text
#}

{% set field_id = id|default(name) %}
{% set label = label|default('') %}
{% set type = type|default('text') %}
{% set name = name|default('') %}
{% set placeholder = placeholder|default('') %}
{% set value = value|default('') %}
{% set required = required|default(false) %}
{% set error = error|default('') %}
{% set help = help|default('') %}

<div class="mb-3">
	{% if label %}
		{% include 'components/atoms/label.html.twig' with {
      for: field_id,
      content: label,
      required: required
    } %}
	{% endif %}

	{% include 'components/atoms/input.html.twig' with {
    type: type,
    name: name,
    id: field_id,
    placeholder: placeholder,
    value: value,
    required: required,
    class: error ? 'is-invalid' : ''
  } %}

	{% if error %}
		<div class="invalid-feedback">
			{{ error }}
		</div>
	{% endif %}

	{% if help %}
		<div class="form-text">
			{{ help }}
		</div>
	{% endif %}
</div>
